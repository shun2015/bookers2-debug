<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h3><%= user.name %>さんとのチャット</h3>
      <%= form_with model: chat, local: true do |f| %>
        <%= f.text_area :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <table>
        <tr>
          <th>投稿者</th>
          <th></th>
          <th>投稿内容</th>
        </tr>
        <% chats.each do |chat| %>
          <tr>
            <td><%= chat.user.name %></td>
            <td></td>
            <td><%= chat.message %></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>