<h1>Follow Users</h1>
<% if @users.present? %>
  <table class='table'>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.following.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %> 